<UserControl
    x:Class="GenAI_ImageGenerator.Views.Templates.Dialogs.SpeechDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GenAI_ImageGenerator.Views.Templates.Dialogs"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="200"
    d:DesignWidth="1920"
    mc:Ignorable="d">
    <Border BorderBrush="Red" BorderThickness="0,1,0,0">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Offset="0.0" Color="#0D1117" />
                <GradientStop Offset="1.0" Color="#212121" />
            </LinearGradientBrush>
        </Border.Background>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock
                Margin="0,15"
                FontSize="25"
                Foreground="#fff"
                Text="Listening..." />
            <Border
                Width="80"
                Height="80"
                BorderBrush="red"
                BorderThickness="2"
                CornerRadius="80">
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard AutoReverse="True" RepeatBehavior="Forever">
                                <ColorAnimation
                                    Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                    To="Transparent"
                                    Duration="0:0:0.5" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>
                <materialDesign:PackIcon
                    Width="50"
                    Height="50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="red"
                    Kind="Microphone" />
            </Border>
        </StackPanel>
    </Border>
</UserControl>
